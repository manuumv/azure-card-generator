{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "outDir": "dist",
    "paths": {
      "api": [
        "./api"
      ],
      "common": [
        "./common"
      ],
      "styles": [
        "./styles"
      ],
    }
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
  ]
}
